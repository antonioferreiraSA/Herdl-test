<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      <h1 class="text-5xl text-[#1c2557] font-bold pb-5">QAccounting</h1>
      <h1 class="text-6xl text-[#1c2557] font-medium">Your online accountant</h1>
      <h1 class="text-6xl text-[#1c2557] font-medium">for one low monthly fee</h1>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <div class="px-64 pb-4">
    <iframe
      width="900"
      height="500"
      src="https://www.youtube.com/embed/nhsdJ5k-fxg"
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </div>

  <Note />

