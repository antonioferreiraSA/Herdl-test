---
import axios from 'axios';

const githubQuery = {
  query: `
      query heading {
        websiteLogo {
          id
          logoName
        }
      }
      `,
};

const res = await axios({
  url: `https://graphql.datocms.com/`,
  method: 'POST',
  headers: {
    'content-type': 'application/json',
    Authorization: `24e45366ff23556adb89e4746d1cea`,
  },
  data: JSON.stringify(githubQuery),
}).catch((error) => {
  console.log('ðŸ”¥ error:', error);
});

const { websiteLogo } = res?.data?.data ?? { websiteLogo: null };
---

<span class="self-center ml-2 text-10xl md:text-xl font-semibold text-[#1c2557] whitespace-nowrap dark:text-white">
  {websiteLogo ? websiteLogo.logoName : 'no data'}</span
>
